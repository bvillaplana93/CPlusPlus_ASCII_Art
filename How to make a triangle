//How to make a triangle



cout<<""<<endl;

cout<<"tringle\n"<<endl;

//Make sure TriangleWidth must be odd number and TriangleHeight must be (TriangleWidth/2+1), in this calse, because we are workind
//with int, but if we were working with double, float or something like that, we must use +0.5


int TriangleWidth =15;
int TriangleHeight = (TriangleWidth/2)+1;

int borderIA = 0;
int borderIB = 2;
int borderJA = TriangleWidth-TriangleHeight-2;
int borderJB =TriangleWidth-TriangleHeight+2;  


  for(int i =  0; i<TriangleHeight; i++)
    {          

        for(int j = 0; j<TriangleWidth; j++)
         {

               if(j==TriangleWidth/2 || i>borderIA && i<borderIB && j>borderJA && j<borderJB)
            {
         
                cout<<char(219);
        
            } else 
            {
                cout<<".";

            }  
         }

                 if(i>=1)
                    {    
                         borderIA++;
                         borderIB++;
                         borderJA--;
                         borderJB++;
                    }
   cout<<""<<endl;
    }

 cout<<""<<endl;
